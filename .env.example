# =============================================================================
# DINO E-MENU - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env for default settings or .env.local for local overrides
# Customize the values according to your environment needs

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
REACT_APP_ENV=development
REACT_APP_NAME=Dino E-Menu
REACT_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS - CONTROL WHAT FEATURES ARE VISIBLE/ENABLED
# =============================================================================

# Theme Toggle Feature - Controls dark/light mode toggle button visibility
REACT_APP_ENABLE_THEME_TOGGLE=true

# Demo Mode Feature - Enables demo login functionality
REACT_APP_ENABLE_DEMO_MODE=true

# Advanced Analytics Feature - Enables analytics and reporting
REACT_APP_ENABLE_ANALYTICS=false

# QR Code Generation Feature - Enables QR code functionality
REACT_APP_ENABLE_QR_CODES=true

# Real-time Notifications Feature - Enables notification system
REACT_APP_ENABLE_NOTIFICATIONS=true

# Multi-language Support Feature - Enables internationalization
REACT_APP_ENABLE_I18N=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RATE_LIMIT=100

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
REACT_APP_JWT_EXPIRY_HOURS=24
REACT_APP_SESSION_TIMEOUT_MINUTES=60
REACT_APP_MIN_PASSWORD_LENGTH=8

# =============================================================================
# THIRD-PARTY SERVICES (Leave empty if not using)
# =============================================================================
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_STRIPE_PUBLIC_KEY=
REACT_APP_SENTRY_DSN=

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_DEBUG_MODE=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
REACT_APP_ENABLE_HOT_RELOAD=true
REACT_APP_GENERATE_SOURCEMAP=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGGING=true