# Environment Variables for Dino Frontend
# These variables are set as build arguments in cloudbuild.yaml
# and will be baked into the React build at BUILD TIME

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
REACT_APP_ENV=production
REACT_APP_NAME=Dino
REACT_APP_VERSION=1.0.0
REACT_APP_DEBUG_MODE=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# This is dynamically set in cloudbuild.yaml based on PROJECT_ID
REACT_APP_API_BASE_URL=https://dino-backend-api-867506203789.us-central1.run.app/api/v1
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RATE_LIMIT=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Theme Toggle Feature - Controls dark/light mode toggle button
REACT_APP_ENABLE_THEME_TOGGLE=false

# Demo Mode Feature - Enables demo login (disabled for production)
REACT_APP_ENABLE_DEMO_MODE=false

# Analytics Feature - Enables advanced analytics and reporting
REACT_APP_ENABLE_ANALYTICS=true

# QR Code Feature - Enables QR code generation for tables and menus
REACT_APP_ENABLE_QR_CODES=true

# Real-time Notifications Feature - Enables real-time notifications for orders
REACT_APP_ENABLE_NOTIFICATIONS=true

# Multi-language Support Feature - Enables internationalization (i18n)
REACT_APP_ENABLE_I18N=false

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
REACT_APP_JWT_EXPIRY_HOURS=24
REACT_APP_SESSION_TIMEOUT_MINUTES=60
REACT_APP_MIN_PASSWORD_LENGTH=8

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_ANIMATIONS=true

# =============================================================================
# CHART CONFIGURATION
# =============================================================================
# Animation interval in milliseconds (30 seconds = 30000ms)
REACT_APP_CHART_ANIMATION_INTERVAL=30000

# Animation duration in milliseconds
REACT_APP_CHART_ANIMATION_DURATION=1000

# Animation easing
REACT_APP_CHART_ANIMATION_EASING=easeInOutQuart

# Whether animations are enabled
REACT_APP_CHART_ANIMATIONS_ENABLED=true

# Auto-refresh data
REACT_APP_CHART_AUTO_REFRESH_ENABLED=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# DEVELOPMENT SETTINGS (DISABLED IN PRODUCTION)
# =============================================================================
REACT_APP_ENABLE_HOT_RELOAD=false
REACT_APP_GENERATE_SOURCEMAP=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_CONSOLE_LOGGING=false

# =============================================================================
# THIRD-PARTY SERVICES (OPTIONAL - SET IN CLOUD BUILD IF NEEDED)
# =============================================================================
# Uncomment and add to cloudbuild.yaml if you need these services:

# Google Analytics
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Stripe Payments
# REACT_APP_STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx

# Sentry Error Tracking
# REACT_APP_SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxx

# Firebase Configuration
# REACT_APP_FIREBASE_API_KEY=xxxxxxxxxxxxx
# REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# REACT_APP_FIREBASE_PROJECT_ID=your-project-id
# REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
# REACT_APP_FIREBASE_APP_ID=1:123456789:web:xxxxxxxxxxxxx

# =============================================================================
# NOTES
# =============================================================================
# 1. All variables starting with REACT_APP_ are available in your React app
# 2. These variables are BAKED INTO THE BUILD at build time
# 3. To change any value, update cloudbuild.yaml and trigger a new build
# 4. The API_BASE_URL is automatically set based on your Google Cloud PROJECT_ID
# 5. Never commit sensitive values - use Cloud Build substitutions for secretsn